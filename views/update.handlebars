<div class="d-flex flex-column gap-3">
    <form action="/updating" method="post" class="d-flex flex-column gap-3" autocomplete="off">
        <h2>UPDATE AN EXISTING POST</h2>
        {{#each post}}
        <input type="hidden" name="id" id="id" value="{{id}}">
        <label for="title">
            <h3>Title</h3>
            <input type="text" name="title" id="title" class="form-control" value="{{title}}">
        </label>
        <label for="content">
            <h3>Content</h3>
            <textarea name="content" id="content" class="form-control" rows="8">{{content}}</textarea>
        </label>
        <div class="mt-3 d-flex gap-1">
            <input type="submit" name="submit" value="Update" class="btn btn-warning w-75">
            <a href="/" class="btn btn-danger w-25">Cancel</a>
        </div>
        {{/each}}
    </form>
</div>