<div class="d-flex flex-column gap-3">
    <form action="/creating" method="post" id="creationForm" class="d-flex flex-column gap-3" autocomplete="off">
        <h2>CREATE A NEW POST</h2>
        <label for="title">
            <h3>Title</h3>
            <input type="text" name="title" id="title" class="form-control" placeholder="Title">
        </label>
        <label for="content">
            <h3>Content</h3>
            <textarea name="content" id="content" class="form-control" placeholder="Content..." rows="8"></textarea>
        </label>
        <div class="mt-3 d-flex gap-1">
            <input type="submit" name="submit" value="Create" class="btn btn-success w-75">
            <a href="/" class="btn btn-danger w-25">Cancel</a>
        </div>
    </form>
</div>